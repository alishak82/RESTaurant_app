<div class='receipt'
<h2>
	Receipt for <%= @party.name %> at Table <%= @party.table_number %>
</h2>

<h6>
	<%= Time.now.strftime("on %m/%d/%Y at %I:%M%p") %>
</h6>

<table>
	<tr>
		<th>
			Food Ordered
		</th>
		<th>
			Price
		</th>
	</tr>
	<% total = 0 %>
	<% @party.foods.each do |food| %>	
		<tr>
			<td>
				<%= food.name %>
			</td>
			<td>
				$<%= food.price.round(2) %>
			</td>
		</tr>
	<% total += food.price %>	
	<% end %>
	<tr>
		<th>
			TOTAL
		</th>
		<th>
			$<%= total.round(2) %>
		</th>
	</tr>
	<h4>
	<tr>
		<th>
			Tip Suggestions
		</th>
	</tr>	
	</h4>
	<tr>
			<tr>
				<td>
			15% = $<%= (total * 0.15).round(2) %>
				</td>
			</tr>
			<tr>
				<td>
			20% = $<%= (total * 0.20).round(2) %>
				</td>
			</tr>
			<tr>
				<td>
			25% = $<%= (total * 0.25).round(2) %>
				</td>
		</tr>
</table>

<h5>
	Thank you for your patronage! Please come again! 
</h5>	
</div>


<p>
	<form action="javascript:if(window.print)window.print()">
		<input type="submit" value="Print Receipt">
	</form>

<p>
<form action="/" method="get">
  <input type="submit" value="Home Page">
</form> 